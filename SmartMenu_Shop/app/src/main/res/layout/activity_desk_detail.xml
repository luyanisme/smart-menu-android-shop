<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_desk_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.luyan.smartmenu_shop.Activity.Desk.DeskDetailActivity">

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/case_order_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"></com.baoyz.swipemenulistview.SwipeMenuListView>

    <TextView
        android:id="@+id/order_state_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/place_order"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorYellow"/>
</LinearLayout>
