<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/case_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="·红烧河豚"
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/standard_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(微辣)"
                android:textColor="@color/colorText"
                android:textSize="11dp"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/case_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="256.0"
            android:textColor="@color/colorRed"
            android:textSize="15dp"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:id="@+id/order_num_operate"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:id="@+id/reduce_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/reduce_circle_icon" />
            </RelativeLayout>

            <TextView
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

            <RelativeLayout
                android:id="@+id/add_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/add_circle_icon" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>